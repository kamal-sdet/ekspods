apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: jmeter-slaves-hpa
  namespace: {{ NAMESPACE | default("jmeter") }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: StatefulSet
    name: jmeter-slaves
  minReplicas: 1
  maxReplicas: {{ MAX_SHARDS | default(1) | int }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
